%h1 Задача №#{@task.id}
.row
  .panel.panel-default
    .panel-heading
      %b= @task.name
    .panel-body
      %table.table.table-striped.table-hover.table-condensed
        %tbody
          %tr
            %th ID
            %td= @task.id
          %tr
            %th Название
            %td= @task.name
          %tr
            %th Описание
            %td= @task.description
          %tr
            %th Статус
            %td= @task.state
          %tr
            %th Создана
            %td= @task.created_at
          - if admin?
            %tr
              %th Назначена
              %td= show_owner(@task)
          - if @task.file.present?
            %tr
              %th Файл
              %td
                - if @task.file.image?
                  = image_tag @task.file_url, class: "image"
                - else
                  = link_to @task.file.get_filename, download_file_user_task_path(@task.user, @task), method: :post